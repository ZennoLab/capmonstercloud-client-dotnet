<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Zennolab.CapMonsterCloud.Client</AssemblyName>
    <RootNamespace>Zennolab.CapMonsterCloud</RootNamespace>
    <Company>Zennolab</Company>
    <Authors>Zennolab</Authors>
    <Description>Official C# client library for capmonster.cloud captcha recognition service</Description>
    <Copyright>Zennolab, 2023</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageTags>capmonster capmonster.cloud zennolab recaptcha funcaptcha hcaptcha captcha geetest</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>logo.png</PackageIcon>
    <RepositoryUrl>https://github.com/ZennoLab/capmonstercloud-client-dotnet</RepositoryUrl>
	  <Version>2.2.0</Version>
	  <PackageReleaseNotes>Fixed DataDome request parameters</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

	<ItemGroup>
    <None Update="logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="CapMonsterCloud.Client.IntegrationTests" />
  </ItemGroup>

</Project>
